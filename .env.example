# Backend Configuration
PROJECT_NAME=kbase-ai
API_V1_STR=/api/v1

# Authentication (Microsoft Entra ID)
AZURE_CLIENT_ID=YOUR_AZURE_CLIENT_ID
AZURE_TENANT_ID=YOUR_AZURE_TENANT_ID
AZURE_CLIENT_SECRET=YOUR_AZURE_CLIENT_SECRET
AZURE_AUTHORITY=https://login.microsoftonline.com/common
BYPASS_AUTH=False
VITE_BYPASS_AUTH=false

# LLM Providers
OPENAI_API_KEY=sk-svcacct-YOUR_OPENAI_KEY
GOOGLE_API_KEY=AIzaSy_YOUR_GOOGLE_KEY

# Vector Database
VECTOR_STORE=qdrant
QDRANT_HOST=localhost
QDRANT_PORT=6333

# Frontend Configuration
# Note: In Docker, these are passed at build time or runtime depending on setup.
# For local dev, Vite picks these up.
VITE_API_URL=http://localhost:8000/api/v1
VITE_AZURE_CLIENT_ID=${AZURE_CLIENT_ID}
VITE_AZURE_TENANT_ID=common
VITE_AZURE_AUTHORITY=${AZURE_AUTHORITY}

# Embeddings
EMBEDDING_MODEL_NAME=BAAI/bge-small-en-v1.5
EMBEDDINGS_SERVICE_URL=http://embeddings-service.kubeflow-user-example-com/v1
